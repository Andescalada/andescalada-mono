{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "react": [ "../../node_modules/@types/react" ],
      "@navigation/*": ["./navigation/*"],
      "@features/*": ["./features/*"],
      "@assets/*": ["./assets/*"],
      "@utils/*": ["./utils/*"],
      "@store/*": ["./store/*"],
      "@hooks/*": ["./hooks/*"],
      "@templates/*": ["./templates/*"],
      "@atoms/*": ["./atoms/*"],
      "@local-database/*": ["./local-database/*"],
    },
    "strict": true
  },
  "exclude": ["./dist"]
}
