{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@navigation/*": [
        "./navigation/*"
      ],
      "@features/*": [
        "./features/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@templates/*": [
        "./templates/*"
      ],
      "@atoms/*": [
        "./atoms/*"
      ],
      "@local-database/*": [
        "./local-database/*"
      ]
    },
    "strict": true
  },
  "exclude": [
    "./dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
