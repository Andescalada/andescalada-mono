{
  "name": "andescalada",
  "private": true,
  "version": "0.0.1",
  "author": "elevyg",
  "license": "MIT",
  "scripts": {
    "db-up": "pscale connect andescalada develop --port 3309",
    "dev:nextjs": "turbo run dev --filter=@andescalada/nextjs",
    "dev:expo": "turbo run dev --filter=expo-app",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev": "turbo run dev",
    "clean": "find . -name node_modules -o -name .next -o -name .expo -type d -prune | xargs rm -rf",
    "postinstall": "prisma generate"
  },
  "workspaces": {"packages":[
    "packages/*",
    "apps/*"
  ],
  "nohoist": ["**/react-native", "**/react-native/**"]},
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "@tanstack/react-query": "^4.3.9",
    "@trpc/client": "^10.0.0-proxy-beta.0",
    "@trpc/next": "^10.0.0-proxy-beta.0",
    "@trpc/react": "^10.0.0-proxy-beta.0",
    "@trpc/server": "^10.0.0-proxy-beta.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "prettier": "^2.4.0",
    "turbo": "^1.3.1",
    "@types/react": "~18.0.0",
    "@types/react-native": "~0.69.1",
    "prisma": "^3.8.1",
    "typescript": "^4.6.3"
  },
  "resolutions": { "@types/react": "17.0.43"}
}
